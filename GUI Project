import tkinter as tk
from tkinter import messagebox

# دالة لحساب مجموع الرقمين
def calculate_sum():
    try:
        num1 = float(entry1.get())
        num2 = float(entry2.get())
        result = num1 + num2
        result_label.config(text=f"النتيجة: {result}")
    except ValueError:
        messagebox.showerror("خطأ", "يرجى إدخال أرقام صحيحة!")

# إنشاء نافذة التطبيق
root = tk.Tk()
root.title("حساب مجموع رقمين")
root.geometry("300x200")

# إضافة العناصر إلى النافذة
label1 = tk.Label(root, text="الرقم الأول:")
label1.pack(pady=5)
entry1 = tk.Entry(root)
entry1.pack(pady=5)

label2 = tk.Label(root, text="الرقم الثاني:")
label2.pack(pady=5)
entry2 = tk.Entry(root)
entry2.pack(pady=5)

calc_button = tk.Button(root, text="احسب", command=calculate_sum)
calc_button.pack(pady=10)

result_label = tk.Label(root, text="النتيجة: ")
result_label.pack(pady=5)

# تشغيل التطبيق
root.mainloop()
