from tkinter import*
from yt_dlp import YoutubeDL


def hight_quality():
    try:
        url = entry.get()

        ydl_opts ={
            'format':'best',
            'outtmpl':'downloads%(titles)%(ext)s'

        }

        with YoutubeDL(ydl-opts) as ydl:
            ydl.download([url])

            print("the vedio has been downloaded")

            except Exception as e:




            print("Error downloading")


def low_quality():
    try:
        url =entry.get()

        ydl_opts ={
            'format':'worst',
            'outtmpl':'downloads%(titles)%(ext)s'

        }

        with YoutubeDL(ydl-opts) as ydl:
            ydl.download([url])

            print("the vedio has been downloaded")
        


        except Exception as e:
            print("Error downloading")

def get_audio():
    try:
        url =entry.get()

        ydl_opts ={
            'format':'best audio',
            'outtmpl':'downloads%(titles)%(ext)s'

        }

        with YoutubeDL(ydl-opts) as ydl:
            ydl.download([url])

            print("the vedio has been downloaded")
        

        except Exception as e:
            print("Error downloading")



window = Tk()
window.title ("kareem")
window.geometry("600x500")
window.configure(bg ="pink")



label = Label(window, text ="add your youtube link here ", font ="bold" , bg =window['bg'])
label.place(x=200 , y=30)


entry = Entry(window, width = 50)
entry.place(x= 200, y =60)

hight = Button(window, text="Hight Quality" ,  command=hight_quality) 
hight.place(x= 100, y = 200)

low = Button(window, text="Low Quality" , command=low_quality) 
low.place(x=200, y = 200)

audio= Button(window, text="Get Audio" , command=get_audio) 
audio.place(x= 300, y = 200)
 

Window.mainloop()
